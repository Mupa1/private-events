<h1 align="center">Create A New Event</h1>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(:event,  :html => {class: "form-horizontal", role: "form"}, :url => events_path) do |f| %>
      <div class="form-group ">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class="form-group ">
        <div class="control-label col-sm-2">
          <%= f.label :location %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :location, class: "form-control" %>
        </div>
      </div>
      <div class="form-group ">
        <div class="control-label col-sm-2">
          <%= f.label :date %>
        </div>
        <div class="col-sm-8">
          <%= f.date_field :date, class: "form-control" %>
        </div>
      </div>
      <div class="form-group ">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control" %>
        </div>
      </div>
      <div class="form-group ">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Create Event', class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
