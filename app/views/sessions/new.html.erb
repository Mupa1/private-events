<h1 align="center">Log in</h1>
<div class="row">
<div class="col-md-12">
    <%= form_for(:session, url: login_path, :html => {class: "form-horizontal", role: "form"} ) do |form| %>
      
      <div class="field form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit 'Log in', class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
</div>
</div>