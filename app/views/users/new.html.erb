<h1 align="center">Create a User</h1>

<div class="row">
  <div class="col-xs-12">

    <%= form_for (@user), :html => {class: "form-horizontal", role: "form"}, :url => users_path do |f| %>
      <div class="form-group ">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group ">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group ">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Create User", class: 'btn btn-primary btn-lg'%>
          </div>
      </div>
    <% end %>

  </div>
</div>